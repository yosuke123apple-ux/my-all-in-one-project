{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./www", // 変換したJSをwwwフォルダに入れる
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"] // srcフォルダの中のTSファイルを全部対象にする
}